# Production database configured on Plesk
DATABASE_URL="mysql://USER:PASSWORD@HOST:PORT/DBNAME?connection_limit=10"

# Application settings
APP_URL="https://yourdomain.com"
NODE_ENV="production"
PORT=3000
FILE_UPLOAD_DIR="./uploads"

# Security
JWT_SECRET="CHANGE_ME_LONG_RANDOM_STRING_AT_LEAST_32_CHARS"
SESSION_COOKIE_NAME="ms_session"
CORS_ORIGIN="https://yourdomain.com"

# SMTP Configuration
SMTP_HOST="smtp.yourdomain.com"
SMTP_PORT=587
SMTP_USER="no-reply@yourdomain.com"
SMTP_PASS="your_smtp_password"
SMTP_FROM="Marine Support Services <no-reply@yourdomain.com>"
CONTACTS_TO="contact@yourdomain.com"

# Admin User (created on first boot)
ADMIN_EMAIL="admin@yourdomain.com"
ADMIN_PASSWORD="SetAStrongPassword"
